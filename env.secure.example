# ===========================================
# SECURE ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to source control

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Strong database connection string with secure password
DB_CONNECTION_STRING=Server=your-server.com;Database=your-db;User Id=your-user;Password=YOUR_STRONG_PASSWORD_HERE;TrustServerCertificate=True;Encrypt=True

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Generate strong JWT secret (minimum 32 characters)
JWT_SECRET_KEY=YOUR_SUPER_SECURE_JWT_SECRET_KEY_MINIMUM_32_CHARACTERS_LONG
JWT_ISSUER=https://backend.waselsy.com
JWT_AUDIENCE=https://backend.waselsy.com

# ===========================================
# OPENIDDICT CONFIGURATION
# ===========================================
OPENID_CLIENT_ID=DeliveryApp_App
OPENID_CLIENT_SECRET=YOUR_OPENID_CLIENT_SECRET_HERE

# ===========================================
# STRING ENCRYPTION
# ===========================================
# Generate strong encryption passphrase (minimum 32 characters)
STRING_ENCRYPTION_PASSPHRASE=YOUR_SUPER_SECURE_ENCRYPTION_PASSPHRASE_MINIMUM_32_CHARACTERS

# ===========================================
# EMAIL CONFIGURATION (SENDPULSE)
# ===========================================
SENDPULSE_CLIENT_ID=your-sendpulse-client-id
SENDPULSE_CLIENT_SECRET=your-sendpulse-client-secret
SENDPULSE_FROM_EMAIL=noreply@waselsy.com
SENDPULSE_FROM_NAME=Waseel

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/firebase-service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# ===========================================
# APPLICATION URLS
# ===========================================
APP_SELF_URL=https://backend.waselsy.com
DASHBOARD_URL=https://dashboard.waselsy.com

# ===========================================
# SECURITY SETTINGS
# ===========================================
REQUIRE_HTTPS=true
REQUIRE_EMAIL_VERIFICATION=true

# ===========================================
# PASSWORD POLICY
# ===========================================
MIN_PASSWORD_LENGTH=12
REQUIRE_PASSWORD_COMPLEXITY=true

# ===========================================
# RATE LIMITING
# ===========================================
API_RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_MINUTE=10

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=Information
ENABLE_STRUCTURED_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS_COLLECTION=true
